<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane stylesheets="@steamlitestyle.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jonas.olsson.controller.LibraryController">
		<left>
			<ListView fx:id="gameListView" editable="true">
			</ListView>
		</left>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <MenuButton mnemonicParsing="false" text="SetRating" GridPane.columnIndex="1">
              <items>
                <MenuItem mnemonicParsing="false" text="1" />
                <MenuItem mnemonicParsing="false" text="2" />
                  <MenuItem mnemonicParsing="false" text="3" />
                  <MenuItem mnemonicParsing="false" text="4" />
              </items>
            </MenuButton>
            <Label text="Game Name" />
            <Button mnemonicParsing="false" text="Play" GridPane.rowIndex="1" />
            <MenuButton mnemonicParsing="false" text="Categories" GridPane.columnIndex="1" GridPane.rowIndex="1">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
            </MenuButton>
         </children>
      </GridPane>
   </center>
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <MenuButton mnemonicParsing="false" text="Library">
              <items>
                <MenuItem mnemonicParsing="false" text="Sort" />
                <MenuItem mnemonicParsing="false" text="Sort" />
              </items>
            </MenuButton>
            <MenuButton mnemonicParsing="false" text="Store">
              <items>
                <MenuItem mnemonicParsing="false" text="Sort" />
                <MenuItem mnemonicParsing="false" text="Sort" />
              </items>
            </MenuButton>
            <MenuButton mnemonicParsing="false" text="Your Page" />
         </children>
      </HBox>
   </top>
</BorderPane>
